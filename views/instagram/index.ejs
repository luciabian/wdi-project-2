<% instagram.forEach(instagram => {%>
  <div class="columns is-centered">
    <div class="card column is-5 is-rows">
      <div class="card-content">


            <header class="card-header">
              <div class="media">
                <div class="media-left">
                  <figure class="profile-pic image is-48x48">
                    <img class="is-rounded" src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                  </figure>
                </div>
                <div class="media-content">
                  <p class="title is-4">@<%= instagram.addedBy %></p>
                  <a href="https://www.google.com/maps" class="subtitle><p"><%= instagram.location %></p></a>
                </div>
              </div>
            </header>


            <div class="card-image">
              <a href="/instagram/<%= instagram.id %>" class="image is-4by4">
                <img src="<%= instagram.image %>" alt="Posted by @SimpsonsUser">
              </a>
            </div>

            <div class="card-content">
              <div class="level is-mobile">
                <div class="level-left">
                  <div class="level-item has-text-centered">
                    <a href="">
                      <i class="material-icons far fa-heart"></i>
                    </a>
                  </div>
                  <div class="level-item has-text-centered">
                    <div>
                      <a href="">
                        <i class="material-icons far fa-comment"></i>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <p class="title is-4"><%= instagram.caption %></p>
            </div>

    </div>
  </div>
</div>
<% }) %>
