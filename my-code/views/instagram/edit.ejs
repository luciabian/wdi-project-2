<form action="/instagram/<%= _id %>?_method=PUT" method="post">
  <div class="control">
    <label for="name">Caption</label>
    <input name="caption" value="<%= caption %>" id="name" placeholder="Edit your caption">
  </div>
  <div class="control">
    <label for="name">Image (URL)</label>
    <input name="image" value="<%= image %>" id="name" placeholder="http://...">
  </div>
  <div class="control">
    <label for="location">Location</label>
    <input name="location" value="<%= location %>" id="location" placeholder="Edit the location">
  </div>
  <button class="button">Update my post</button>
</form>
